@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="row mb-5">
    <div class="col-md-12">
        <div class="d-flex align-items-center">
            <div class="me-3" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--primary-color), var(--info-color)); border-radius: 18px; display: flex; align-items: center; justify-content: center; box-shadow: 0 6px 20px rgba(59, 130, 246, 0.3);">
                <i class="bi bi-speedometer2" style="font-size: 2rem; color: white;"></i>
            </div>
            <div>
                <h2 class="mb-1 fw-bold">Dashboard Admin</h2>
                <p class="text-muted mb-0">Ringkasan statistik dan performa penjualan</p>
            </div>
        </div>
    </div>
</div>

<!-- Cards Statistik -->
<div class="row mb-5">
    <div class="col-md-3 mb-3">
        <div class="card stat-card shadow-lg" style="background-color: #2563eb;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-0" style="opacity: 0.9;">Pendapatan Bulan Ini</h6>
                    </div>
                    <i class="bi bi-cash-stack" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
                <h3 class="mb-1">Rp @Model.MonthlyRevenue.ToString("N0")</h3>
                <small style="opacity: 0.8;">
                    <i class="bi bi-calendar-month"></i> @DateTime.Now.ToString("MMMM yyyy")
                </small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card shadow-lg" style="background-color: #10b981;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-0" style="opacity: 0.9;">Buku Terjual</h6>
                    </div>
                    <i class="bi bi-graph-up-arrow" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
                <h3 class="mb-1">@Model.MonthlyBooksSold</h3>
                <small style="opacity: 0.8;">
                    <i class="bi bi-box-seam"></i> Total unit bulan ini
                </small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card shadow-lg" style="background-color: #06b6d4;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-0" style="opacity: 0.9;">Transaksi</h6>
                    </div>
                    <i class="bi bi-receipt" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
                <h3 class="mb-1">@Model.MonthlyTransactions</h3>
                <small style="opacity: 0.8;">
                    <i class="bi bi-cart-check"></i> Total pesanan bulan ini
                </small>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card stat-card shadow-lg" style="background-color: #f59e0b;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h6 class="mb-0" style="opacity: 0.9;">Total Buku</h6>
                    </div>
                    <i class="bi bi-collection" style="font-size: 2rem; opacity: 0.7;"></i>
                </div>
                <h3 class="mb-1">@Model.TotalBooks</h3>
                <small style="opacity: 0.8;">
                    <i class="bi bi-bookshelf"></i> Jumlah buku di katalog
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Charts -->
<div class="row mb-5">
    <div class="col-md-6 mb-4">
        <div class="card shadow-md border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-1 fw-bold">
                    <i class="bi bi-graph-up-arrow text-success me-2"></i> 
                    Penjualan Buku per Bulan
                </h5>
                <small class="text-muted">12 Bulan Terakhir</small>
            </div>
            <div class="card-body p-4">
                <canvas id="salesChart" height="300"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card shadow-md border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-1 fw-bold">
                    <i class="bi bi-currency-dollar text-primary me-2"></i> 
                    Pendapatan per Bulan
                </h5>
                <small class="text-muted">12 Bulan Terakhir</small>
            </div>
            <div class="card-body p-4">
                <canvas id="revenueChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-md border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-lightning-charge-fill text-warning me-2"></i> 
                    Quick Actions
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="d-grid gap-2 d-md-flex">
                    <a asp-action="CreateBook" class="btn btn-success">
                        <i class="bi bi-plus-circle me-2"></i> Tambah Buku Baru
                    </a>
                    <a asp-action="Books" class="btn btn-primary">
                        <i class="bi bi-collection me-2"></i> Kelola Buku
                    </a>
                    <a asp-action="Transactions" class="btn btn-info">
                        <i class="bi bi-cash-stack me-2"></i> Lihat Transaksi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Data dari server
        var salesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.SalesData));
        var revenueData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RevenueData));

        // Chart Penjualan
        var salesCtx = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: salesData.map(d => d.month),
                datasets: [{
                    label: 'Jumlah Buku Terjual',
                    data: salesData.map(d => d.value),
                    backgroundColor: 'rgba(16, 185, 129, 0.15)',
                    borderColor: '#10b981',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#10b981',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1,
                            font: {
                                size: 12
                            }
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: 12
                            }
                        },
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 13,
                                weight: 'bold'
                            },
                            usePointStyle: true,
                            padding: 15
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14
                        },
                        bodyFont: {
                            size: 13
                        },
                        padding: 12,
                        cornerRadius: 8
                    }
                }
            }
        });

        // Chart Pendapatan
        var revenueCtx = document.getElementById('revenueChart').getContext('2d');
        var revenueChart = new Chart(revenueCtx, {
            type: 'bar',
            data: {
                labels: revenueData.map(d => d.month),
                datasets: [{
                    label: 'Pendapatan (Rp)',
                    data: revenueData.map(d => d.value),
                    backgroundColor: '#2563eb',
                    borderColor: '#1e40af',
                    borderWidth: 0,
                    borderRadius: 8,
                    borderSkipped: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return 'Rp ' + value.toLocaleString('id-ID');
                            },
                            font: {
                                size: 12
                            }
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: 12
                            }
                        },
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 13,
                                weight: 'bold'
                            },
                            usePointStyle: true,
                            padding: 15
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14
                        },
                        bodyFont: {
                            size: 13
                        },
                        padding: 12,
                        cornerRadius: 8,
                        callbacks: {
                            label: function(context) {
                                return 'Pendapatan: Rp ' + context.parsed.y.toLocaleString('id-ID');
                            }
                        }
                    }
                }
            }
        });
    </script>
}
