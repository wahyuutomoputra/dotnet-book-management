@model IEnumerable<BookManagement.Models.Book>

@{
    ViewData["Title"] = "Kelola Buku";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2>Kelola Buku</h2>
    </div>
    <div class="col-md-6">
        <a asp-action="CreateBook" class="btn btn-success float-end">
            <i class="bi bi-plus-circle"></i> Tambah Buku Baru
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" class="d-flex">
            <input type="text" name="search" class="form-control me-2" placeholder="Cari buku..." value="@ViewBag.SearchTerm" />
            <button type="submit" class="btn btn-primary">Cari</button>
        </form>
    </div>
    <div class="col-md-6">
        <div class="btn-group float-end" role="group">
            <a asp-action="Books" class="btn btn-outline-secondary @(ViewBag.CurrentCategory == null ? "active" : "")">Semua</a>
            @foreach (var category in ViewBag.Categories)
            {
                <a asp-action="Books" asp-route-category="@category" class="btn btn-outline-secondary @(ViewBag.CurrentCategory == category ? "active" : "")">@category</a>
            }
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Judul</th>
                <th>Author</th>
                <th>Penerbit</th>
                <th>Kategori</th>
                <th>Harga</th>
                <th>Stock</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <strong>@book.Title</strong><br />
                        <small class="text-muted">ISBN: @book.ISBN</small>
                    </td>
                    <td>@book.Author</td>
                    <td>@book.Publisher (@book.PublicationYear)</td>
                    <td><span class="badge bg-info">@book.Category</span></td>
                    <td>Rp @book.Price.ToString("N0")</td>
                    <td>
                        @if (book.Stock > 0)
                        {
                            <span class="badge bg-success">@book.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Habis</span>
                        }
                    </td>
                    <td>
                        <a asp-action="BookDetails" asp-route-id="@book.Id" class="btn btn-sm btn-info">Detail</a>
                        <a asp-action="EditBook" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="DeleteBook" method="post" class="d-inline" onsubmit="return confirm('Hapus buku ini?');">
                            <input type="hidden" name="id" value="@book.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Hapus</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Tidak ada buku ditemukan.
    </div>
}
