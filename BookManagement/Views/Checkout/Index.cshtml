@{
    ViewData["Title"] = "Checkout";
    var cartItems = ViewBag.CartItems as IEnumerable<BookManagement.Models.Cart>;
}

<div class="row mb-3">
    <div class="col-md-12">
        <h2>Checkout</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Detail Pesanan</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Buku</th>
                            <th>Harga</th>
                            <th>Jumlah</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in cartItems!)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Book.Title</strong><br />
                                    <small class="text-muted">@item.Book.Author</small>
                                </td>
                                <td>Rp @item.Book.Price.ToString("N0")</td>
                                <td>@item.Quantity</td>
                                <td>Rp @((item.Book.Price * item.Quantity).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total:</th>
                            <th>Rp @ViewBag.Total.ToString("N0")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Ringkasan Pembayaran</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Item:</span>
                    <strong>@cartItems!.Sum(c => c.Quantity)</strong>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Total Pembayaran:</span>
                    <strong class="text-primary fs-4">Rp @ViewBag.Total.ToString("N0")</strong>
                </div>
                <hr />
                <form asp-action="Process" method="post">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Proses pembayaran?');">
                            Bayar Sekarang
                        </button>
                    </div>
                </form>
                <div class="d-grid mt-2">
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">Kembali ke Keranjang</a>
                </div>
            </div>
        </div>
        
        <div class="alert alert-info mt-3">
            <small>
                <strong>Catatan:</strong> Setelah pembayaran, stock buku akan otomatis dikurangi.
            </small>
        </div>
    </div>
</div>
