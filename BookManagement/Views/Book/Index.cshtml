@model IEnumerable<BookManagement.Models.Book>

@{
    ViewData["Title"] = "Daftar Buku";
}

<div class="row mb-5">
    <div class="col-md-12">
        <div class="d-flex align-items-center">
            <div class="me-3" style="width: 60px; height: 60px; background: linear-gradient(135deg, var(--primary-color), var(--info-color)); border-radius: 15px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 15px rgba(59, 130, 246, 0.25);">
                <i class="bi bi-bookshelf" style="font-size: 1.75rem; color: white;"></i>
            </div>
            <div>
                <h2 class="mb-1 fw-bold">Katalog Buku</h2>
                <p class="text-muted mb-0">Temukan buku favorit Anda</p>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-5">
    <div class="col-md-6 mb-3">
        <div class="card shadow-md border-0">
            <div class="card-body p-4">
                <form method="get" class="d-flex">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" name="search" class="form-control border-start-0" placeholder="Cari judul, penulis, atau penerbit..." value="@ViewBag.SearchTerm" />
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-search me-1"></i> Cari
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card shadow-md border-0">
            <div class="card-body p-4">
                <div class="d-flex align-items-center flex-wrap">
                    <i class="bi bi-funnel-fill me-2 text-primary"></i>
                    <strong class="me-3">Kategori:</strong>
                    <div class="btn-group flex-wrap" role="group">
                        <a asp-action="Index" class="btn btn-sm @(ViewBag.CurrentCategory == null ? "btn-primary" : "btn-outline-primary")">Semua</a>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <a asp-action="Index" asp-route-category="@category" class="btn btn-sm @(ViewBag.CurrentCategory == category ? "btn-primary" : "btn-outline-primary")">@category</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-md border-0">
                <div class="card-body d-flex flex-column p-4">
                    <div class="mb-3">
                        <span class="badge bg-info mb-2">
                            <i class="bi bi-tag-fill me-1"></i> @book.Category
                        </span>
                        @if (book.Stock > 0)
                        {
                            <span class="badge bg-success ms-1">
                                <i class="bi bi-check-circle-fill me-1"></i> In Stock
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger ms-1">
                                <i class="bi bi-x-circle-fill me-1"></i> Out of Stock
                            </span>
                        }
                    </div>
                    
                    <h5 class="card-title text-truncate mb-2" title="@book.Title" style="font-size: 1.1rem; line-height: 1.4;">
                        @book.Title
                    </h5>
                    <h6 class="card-subtitle mb-3 text-muted" style="font-size: 0.9rem;">
                        <i class="bi bi-person me-1"></i> @book.Author
                    </h6>
                    
                    <div class="mb-3" style="font-size: 0.85rem;">
                        <div class="text-muted mb-1">
                            <i class="bi bi-building me-1"></i> @book.Publisher
                        </div>
                        <div class="text-muted">
                            <i class="bi bi-calendar3 me-1"></i> @book.PublicationYear
                        </div>
                    </div>
                    
                    <div class="mt-auto">
                        <div class="d-flex justify-content-between align-items-center mb-3 pb-3" style="border-bottom: 1px solid var(--border-color);">
                            <div class="price-tag" style="font-size: 1.35rem;">Rp @book.Price.ToString("N0")</div>
                            <small class="text-muted">
                                <i class="bi bi-box-seam me-1"></i> @book.Stock
                            </small>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye me-1"></i> Detail
                            </a>
                            <form asp-action="AddToCart" method="post">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-success btn-sm w-100" @(book.Stock == 0 ? "disabled" : "")>
                                    <i class="bi bi-cart-plus me-1"></i> Tambah ke Keranjang
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm text-center p-5">
        <div>
            <i class="bi bi-inbox" style="font-size: 4rem; color: var(--secondary-color);"></i>
            <h4 class="mt-3">Tidak ada buku ditemukan</h4>
            <p class="text-muted">Coba ubah filter atau kata kunci pencarian Anda</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-clockwise"></i> Reset Filter
            </a>
        </div>
    </div>
}
