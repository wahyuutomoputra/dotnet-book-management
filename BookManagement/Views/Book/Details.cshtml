@model BookManagement.Models.Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Daftar Buku</a></li>
                <li class="breadcrumb-item active">@Model.Title</li>
            </ol>
        </nav>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <h2>@Model.Title</h2>
        <h5 class="text-muted">@Model.Author</h5>
        
        <div class="mt-4">
            <table class="table table-borderless">
                <tr>
                    <th width="150">Penerbit</th>
                    <td>@Model.Publisher</td>
                </tr>
                <tr>
                    <th>Tahun Terbit</th>
                    <td>@Model.PublicationYear</td>
                </tr>
                <tr>
                    <th>ISBN</th>
                    <td>@Model.ISBN</td>
                </tr>
                <tr>
                    <th>Kategori</th>
                    <td><span class="badge bg-info">@Model.Category</span></td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>
                        @if (Model.Stock > 0)
                        {
                            <span class="badge bg-success">@Model.Stock tersedia</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Habis</span>
                        }
                    </td>
                </tr>
            </table>
        </div>

        <div class="mt-4">
            <h5>Deskripsi</h5>
            <p>@Model.Description</p>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h3 class="text-primary">Rp @Model.Price.ToString("N0")</h3>
                
                @if (Model.Stock > 0)
                {
                    <form asp-action="AddToCart" method="post" class="mt-3">
                        <input type="hidden" name="bookId" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="quantity" class="form-label">Jumlah</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" max="@Model.Stock" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-cart-plus"></i> Tambah ke Keranjang
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-warning mt-3">
                        Stock habis
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary">Kembali ke Daftar Buku</a>
    </div>
</div>
