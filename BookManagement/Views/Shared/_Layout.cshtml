<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    if (User.IsInRole("customer"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Book" asp-action="Index">
                            <i class="bi bi-book-half"></i> BookManagement
                        </a>
                    }
                    else if (User.IsInRole("admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Dashboard">
                            <i class="bi bi-book-half"></i> BookManagement
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-book-half"></i> BookManagement
                        </a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-book-half"></i> BookManagement
                    </a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Book" asp-action="Index">
                                    <i class="bi bi-bookshelf"></i> Daftar Buku
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-cart3"></i> Keranjang
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Checkout" asp-action="MyOrders">
                                    <i class="bi bi-receipt"></i> Pesanan Saya
                                </a>
                            </li>
                        }
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Books">
                                    <i class="bi bi-collection"></i> Kelola Buku
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Transactions">
                                    <i class="bi bi-cash-stack"></i> Transaksi
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name 
                                    <span class="badge bg-primary">@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="flex: 1;">
        <main role="main" class="pb-5 fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <p class="mb-2">
                        <i class="bi bi-book-half text-primary-custom me-2"></i> 
                        <strong class="fw-bold">BookManagement</strong> - Sistem Manajemen Toko Buku Online
                    </p>
                    <p class="mb-0">
                        &copy; 2025 BookManagement. All rights reserved. | 
                        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none fw-semibold">Privacy Policy</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
